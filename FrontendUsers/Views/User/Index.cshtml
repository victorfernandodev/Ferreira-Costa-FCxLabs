@model List<User>
@{
    ViewData["Title"] = "Usuários";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="text-center">
        <div class="d-flex flex-row-reverse">
            <div class="p-2">
                <a type="button" asp-controller="User" asp-action="CreateUser" class="btn btn-primary">Cadastrar usuário</a>
            </div>
            <div class="p-2">Usuários</div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Password</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th>CPF</th>
                    <th>Data de Nascimento</th>
                    <th>Nome da Mãe</th>
                    <th>Status</th>
                    <th>Data de inclusão</th>
                    <th>Data de alteração</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Name</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Password</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.PhoneNumber</td>
                        <td>@usuario.Cpf</td>
                        <td>@usuario.DateOfBirth</td>
                        <td>@usuario.MotherName</td>
                        <td>@usuario.Status</td>
                        <td>@usuario.InclusionDate</td>
                        <td>@usuario.ChangeDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
